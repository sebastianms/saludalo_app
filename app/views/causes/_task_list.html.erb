<%- model_class = Task -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Amigo</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:final_date) %></th>
      <th>Estado</th>
      <th>Calificacion</th>
      <th>Operaciones</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <% if task.status == "done" %>
        <tr class="task-data alert alert-success">
      <% else %>
        <tr class="task-data">
      <% end %>
      <td><%= task.user.name %></td>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.start_date %></td>
      <td><%= task.final_date %></td>
      <td><%= translate_status task.status %></td>
      <td>
        <% total = "" %>
        <% task.mark.times do %>
          <% total = "*" + total %>
        <% end %>
        <%= total %>
      </td>
      <td>
        <%= link_to "Editar",
        edit_task_path(task), :class => 'btn btn-mini' %>
        <%= link_to "Eliminar",
        task_path(task),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-mini btn-danger' %>
        <%= link_to "Terminar", complete_task_path(task.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
